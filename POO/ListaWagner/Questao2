package Questao2;

import java.util.ArrayList;

public class Main {
    public static void main(String[] args) {
        ArrayList<Funcionarios> funcionarios = new ArrayList<>();

        funcionarios.add(new Gerente("Thiago", 5000));
        funcionarios.add(new Vendedores("Pedro", 3000));

        for (Funcionarios f : funcionarios) {
            f.exibirDados();
        }

        System.out.println(funcionarios);

    }
}



package Questao2;

public abstract class Funcionarios {
    protected String nome;
    protected double salarioBase;

    public Funcionarios(String nome, double salarioBase) {
        this.nome = nome;
        this.salarioBase = salarioBase;
    }

    public abstract double calcularSalario();

    @Override
    public String toString() {
        return "Funcionario:" +
                "\n nome:" + nome +
                "\n salarioBase:" + salarioBase;
    }

    public void exibirDados() {
    }
}




package Questao2;

public class Gerente extends Funcionarios {
    public Gerente(String nome, double salarioBase) {
        super(nome, salarioBase);
    }

    @Override
    public double calcularSalario() {
        return salarioBase + (salarioBase * 0.2);
    }
}




package Questao2;

public class Vendedores extends Funcionarios {
    public Vendedores(String nome, double salarioBase) {
        super(nome, salarioBase);
    }

    @Override
    public double calcularSalario() {
        return salarioBase + (salarioBase * 0.1);
    }
}
